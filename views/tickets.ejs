<!DOCTYPE html>
<html>
  <head>
    <title>Home page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <!-- HEADER -->
    <%- include('navbar')%>

    <h4 class="titleForm" id="ticket">My tickets :</h4>

    <!-- TICKETS -->
    <div class="container mt-5" id="homepage">

    <table class="table table-borderless">
        <thead>
          <tr>
            <th scope="col">N°</th>
            <th scope="col">Joourney</th>
            <th scope="col">Date</th>
            <th scope="col">Departure time</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <% traj.map((el)=>{%> 
          <tr>
            <th scope="row">1</th>
            <td><%=  el.departure %>/<%= el.arrival  %> </td>
            <td><%= dateFormat(el.date)  %> </td>
            <td><%= el.departureTime  %> </td>
            <td><%= el.price %>€ </td>
          </tr>
        <% }) %> 
          <tr class="table-danger">
            <th scope="row"> </th>
            <td></td>
            <td></td>
            <td></td>

            
            <td class="justify-content-end">Total <%= traj[0].price * traj.length%>€</td>
          </tr>
        </tbody>
    </table>
    <div class="row justify-content-end">
        <button type="submit" class="btn btn-danger justify-content-end mr-3">Confirm</button>
    </div>
    
    <%- include('sidebar')%>   
        
    </div>
  

    <script src="https://colorzilla.com/gradient-editor/#1e5799+0,2989d8+50,207cca+51,7db9e8+100;Blue+Gloss+Default"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
